---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import me from "../assets/rafael-meza.jpg";
---

<Layout>
  <div
    transition:name="contact"
    class="max-w-[1250px] bg-[#F9F9F9] mx-auto h-full rounded-[62px] flex justify-center items-center relative"
  >
    <Button href="/" classes="top-[30px] right-[30px]">
      <Icon name="material-symbols-light:arrow-back-rounded" size="32" />
    </Button>
    <div>
      <div class="mb-16">
        <div class="flex items-center space-x-5 mb-6">
          <Icon
            name="material-symbols-light:award-star-rounded"
            size="96"
            class="text-[#FCCF5A]"
          />
          <h1 class="text-[#FCCF5A] text-[80px] font-nixie-one">RAFAEL MEZA</h1>
        </div>
        <a
          href=""
          class="bg-[#FCCF5A] place-self-end px-8 font-raleway py-2 w-fit flex items-center space-x-4 rounded-[40px]"
          ><span> Download Resume </span>
          <Icon
            name="material-symbols-light:download-rounded"
            size="48"
            class="text-white"
          />
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <div
          class="h-[200px] rounded-[30px] text-white bg-[#704EE7] flex items-center justify-center w-1/3"
        >
          <div class="font-manrope text-white">
            <p class="mb-1">rhmcord@gmail.com</p>
            <p>PHONE: +51 - 997258592</p>
          </div>
        </div>
        <div
          class="h-[200px] flex rounded-[30px] w-1/3 bg-[#FCCF5A] items-center justify-center"
        >
          <div class="font-manrope">
            <p>GITHUB: raffo1234</p>
            <p>LINKEDIN: Rafael Meza</p>
          </div>
        </div>
        <div
          class="h-[200px] rounded-[30px] relative w-1/3 items-center justify-between overflow-hidden"
        >
          <Image
            src={me}
            class="w-full object-cover absolute object-top h-full"
            alt="Rafael Meza"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
