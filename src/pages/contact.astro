---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import me from "../assets/rafael-meza.jpg";
import Container from "../components/Container.astro";
---

<Layout pageTitle="Get in touch">
  <Container>
    <div
      transition:name="contact"
      class="max-w-[1250px] px-4 md:px-20 py-16 bg-[#FFF3EA] mx-auto rounded-[32px] lg:rounded-[52px] flex justify-center items-center relative w-full"
    >
      <a
        href="/"
        class="absolute flex items-center justify-center rounded-full w-[52px] h-[52px] top-[30px] text-orange bg-purple right-[30px]"
      >
        <Icon
          name="material-symbols-light:arrow-back-rounded"
          size="52"
          class="-rotate-45"
        />
      </a>
      <div class="w-full">
        <div class="mb-6">
          <div class="flex items-center mb-6 space-x-5">
            <Icon
              name="material-symbols-light:award-star-rounded"
              size="96"
              class="text-orange"
            />
            <h1
              class="text-orange font-nixie-one"
              style="font-size:clamp(18px, 4vw + 1rem, 60px)"
            >
              RAFAEL MEZA
            </h1>
          </div>
          <p class="font-lobster text-3xl text-orange">Available for work</p>
        </div>
        <div
          class="grid gap-4 w-full"
          style={{
            gridTemplateColumns: "repeat(auto-fit, minmax(140px, 1fr))",
          }}
        >
          <div
            class="aspect-square rounded-[30px] relative w-full items-center justify-between overflow-hidden"
          >
            <Image
              src={me}
              class="absolute object-cover object-top w-full h-full"
              alt="Rafael Meza "
            />
          </div>
          <a
            href="mailto:rafaelmezac@gmail.com"
            target="_blank"
            rel="noreferrer"
            title="Email | Rafael Meza | rafaelmezac@gmail.com"
            class="drop-shadow-xl hover:drop-shadow-2xl duration-300 transition ease-in-out overflow-hidden aspect-square flex items-center justify-center rounded-[30px] bg-purple relative w-full"
          >
            <Icon
              name="material-symbols-light:mark-email-read-outline"
              size="48"
              class="text-orange absolute left-2 bottom-2"
            />
            <Icon
              name="material-symbols-light:arrow-back-rounded"
              size="48"
              class="text-orange absolute right-0 top-0 rotate-[135deg]"
            />
          </a>
          <a
            href="https://github.com/raffo1234"
            target="_blank"
            rel="noreferrer"
            title="Github | Rafael Meza | raffo1234"
            class="drop-shadow-xl hover:drop-shadow-2xl duration-300 transition ease-in-out aspect-square rounded-[30px] bg-purple relative w-full items-center justify-between overflow-hidden"
          >
            <Icon
              name="material-symbols-light:code-blocks-outline"
              size="48"
              class="text-orange absolute left-3 bottom-3"
            />
            <Icon
              name="material-symbols-light:arrow-back-rounded"
              size="48"
              class="text-orange absolute right-0 top-0 rotate-[135deg]"
            />
          </a>
          <a
            href="https://wa.me/+51997258592"
            title="Whatsapp | Rafael Meza | +51 997258592"
            target="_blank"
            rel="noreferrer"
            class="drop-shadow-xl hover:drop-shadow-2xl duration-300 transition ease-in-out aspect-square rounded-[30px] bg-purple relative w-full items-center justify-between overflow-hidden"
          >
            <Icon
              name="material-symbols-light:mark-unread-chat-alt-outline"
              size="48"
              class="text-orange absolute left-3 bottom-3"
            />
            <Icon
              name="material-symbols-light:arrow-back-rounded"
              size="48"
              class="text-orange absolute right-0 top-0 rotate-[135deg]"
            />
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>
